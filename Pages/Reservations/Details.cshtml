@page
@model ProiectSite.Pages.Reservations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.LastName)
        </dd>
    </dl>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Oras</dt>
        <dd class="col-sm-10">
            @if (Model.Vacation != null)
            {
                @Model.Vacation.Name
            }
            else
            {
                <span>Vacation not available</span>
            }
        </dd>
        <dt class="col-sm-2">Pret</dt>
        <dd class="col-sm-10">@Model.Vacation?.Price</dd>

        <dt class="col-sm-2">Inceput Vacanta</dt>
        <dd class="col-sm-10">@Model.Vacation?.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Sfarsit Vacanta</dt>
        <dd class="col-sm-10">@Model.Vacation?.EndDate.ToShortDateString()</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Reservation?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
